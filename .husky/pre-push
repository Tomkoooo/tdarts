#!/usr/bin/env sh

echo "üöÄ Running pre-push checks..."
echo "‚è≥ This may take a few minutes..."

# Get the project root directory (where package.json is)
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT" || exit 1

# Ensure we're using the correct Node.js version and PATH
# Get the node path from the current environment
NODE_BIN="$(command -v node)"
NPM_BIN="$(command -v npm)"

if [ -z "$NODE_BIN" ]; then
  # Fallback to common locations
  if [ -f "/usr/local/bin/node" ]; then
    NODE_BIN="/usr/local/bin/node"
  elif [ -f "/opt/homebrew/bin/node" ]; then
    NODE_BIN="/opt/homebrew/bin/node"
  fi
fi

if [ -n "$NODE_BIN" ]; then
  export PATH="$(dirname "$NODE_BIN"):$PATH"
  export NODE_PATH="$NODE_BIN"
fi

# Set NODE_OPTIONS to avoid module resolution issues
export NODE_OPTIONS="--no-warnings"

# Run lint
echo ""
echo "üìù Running ESLint..."
npm run lint || {
  echo ""
  echo "‚ùå ESLint failed. Please fix the errors before pushing."
  echo "Run 'npm run lint' to see the errors."
  exit 1
}

# Run build
echo ""
echo "üèóÔ∏è  Running production build..."
npm run build || {
  echo ""
  echo "‚ùå Build failed. Please fix the errors before pushing."
  echo "Run 'npm run build' to see the errors."
  exit 1
}

echo ""
echo "‚úÖ All pre-push checks passed! Proceeding with push..."
echo ""
