#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."
echo "â³ This may take a few minutes..."

# Get the project root directory (where package.json is)
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT" || exit 1

# Ensure we're using the correct Node.js version and PATH
export PATH="/usr/local/bin:$PATH"

# Check if node_modules exists and is complete
if [ ! -d "node_modules" ] || [ ! -d "node_modules/lightningcss" ]; then
  echo ""
  echo "âš ï¸  node_modules seems incomplete. Reinstalling dependencies..."
  npm install
fi

# Rebuild native modules to ensure they're available
echo ""
echo "ğŸ”§ Rebuilding native modules..."
npm rebuild lightningcss 2>/dev/null || true

# Run lint
echo ""
echo "ğŸ“ Running ESLint..."
npm run lint || {
  echo ""
  echo "âŒ ESLint failed. Please fix the errors before pushing."
  echo "Run 'npm run lint' to see the errors."
  exit 1
}

# Run build
echo ""
echo "ğŸ—ï¸  Running production build..."
npm run build || {
  echo ""
  echo "âŒ Build failed. Please fix the errors before pushing."
  echo "Run 'npm run build' to see the errors."
  exit 1
}

echo ""
echo "âœ… All pre-push checks passed! Proceeding with push..."
echo ""
