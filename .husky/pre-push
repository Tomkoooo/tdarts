#!/usr/bin/env sh

set -e

echo "üöÄ Running pre-push checks..."
echo "‚è≥ This may take a few minutes..."

# Get the project root directory (where package.json is)
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT" || exit 1

# Use exactly the same Node/npm that are on PATH in the shell
NODE_BIN="$(command -v node || true)"
NPM_BIN="$(command -v npm || true)"

if [ -z "$NODE_BIN" ] || [ -z "$NPM_BIN" ]; then
  echo "‚ùå node/npm not found on PATH inside pre-push hook."
  echo "Please ensure your shell initialization exposes Node before git push."
  exit 1
fi

echo "üîß Node: $($NODE_BIN -v)"
echo "üîß Npm: $($NPM_BIN -v)"

# Resolve Next CLI directly and run it with Node.
NEXT_CLI="./node_modules/next/dist/bin/next"
if [ ! -f "$NEXT_CLI" ]; then
  echo "‚ùå next CLI not found at $NEXT_CLI"
  echo "Run npm install first."
  exit 1
fi

# On Apple Silicon hardware, always force arm64 execution even if git was launched under Rosetta.
RUN_PREFIX=""
if [ -x "/usr/sbin/sysctl" ] && [ -x "/usr/bin/arch" ]; then
  HOST_ARM64="$(/usr/sbin/sysctl -in hw.optional.arm64 2>/dev/null || echo 0)"
  if [ "$HOST_ARM64" = "1" ]; then
    RUN_PREFIX="/usr/bin/arch -arm64"
    echo "üîß Exec mode: arm64 (forced)"
  fi
fi

# Run lint
echo ""
echo "üìù Running ESLint..."
if [ -n "$RUN_PREFIX" ]; then
  $RUN_PREFIX "$NODE_BIN" "$NEXT_CLI" lint
else
  "$NODE_BIN" "$NEXT_CLI" lint
fi || {
  echo ""
  echo "‚ùå ESLint failed. Please fix the errors before pushing."
  echo "Run 'npm run lint' to see the errors."
  exit 1
}

# Run build
echo ""
echo "üèóÔ∏è  Running production build..."
if [ -n "$RUN_PREFIX" ]; then
  $RUN_PREFIX "$NODE_BIN" "$NEXT_CLI" build
else
  "$NODE_BIN" "$NEXT_CLI" build
fi || {
  echo ""
  echo "‚ùå Build failed. Please fix the errors before pushing."
  echo "Run 'npm run build' to see the errors."
  exit 1
}

echo ""
echo "‚úÖ All pre-push checks passed! Proceeding with push..."
echo ""
