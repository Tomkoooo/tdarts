#!/usr/bin/env sh

set -e

echo "ğŸš€ Running pre-push checks..."
echo "â³ This may take a few minutes..."

# Get the project root directory (where package.json is)
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT" || exit 1

# Use exactly the same Node/npm that are on PATH in the shell
NODE_BIN="$(command -v node || true)"
NPM_BIN="$(command -v npm || true)"

if [ -z "$NODE_BIN" ] || [ -z "$NPM_BIN" ]; then
  echo "âŒ node/npm not found on PATH inside pre-push hook."
  echo "Please ensure your shell initialization exposes Node before git push."
  exit 1
fi

echo "ğŸ”§ Node: $($NODE_BIN -v)"
echo "ğŸ”§ Npm: $($NPM_BIN -v)"

# Run lint
echo ""
echo "ğŸ“ Running ESLint..."
"$NPM_BIN" run lint || {
  echo ""
  echo "âŒ ESLint failed. Please fix the errors before pushing."
  echo "Run 'npm run lint' to see the errors."
  exit 1
}

# Run build
echo ""
echo "ğŸ—ï¸  Running production build..."
"$NPM_BIN" run build || {
  echo ""
  echo "âŒ Build failed. Please fix the errors before pushing."
  echo "Run 'npm run build' to see the errors."
  exit 1
}

echo ""
echo "âœ… All pre-push checks passed! Proceeding with push..."
echo ""
